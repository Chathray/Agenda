<resources>
    <!-- Base application theme. -->
    <style name="AgendaMain" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AgendaSettings" parent="AgendaMain">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
    </style>

    <style name="SquareAlert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textAllCaps">false</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="AgendaAlert" parent="SquareAlert">
        <item name="android:background">@drawable/bg_material_alert</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2ECC71</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#E74C3C</item>
    </style>

    <style name="SubjectDialogTheme" parent="AgendaMain">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="SubjectMenuTheme" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:background">@color/colorParent</item>
    </style>

</resources>